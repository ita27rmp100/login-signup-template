<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./master/head_links_meta.ejs') %>
    <title>NoFap | HOME</title>
</head>
<body>
    <!-- NavBar -->
    <nav class="navbar navbar-dark bg-dark d-flex justify-content-center">
        <section class="navbar-brand mb-0 h1 text-danger">NoFap</section>
    </nav>
    <!-- Counter -->
    <nav class="container p-0">
        <div class="card p-0 my-2 counter-card">
            <div class="card-body d-inline-block text-muted">
                <h2 class="card-text d-inline counter" id="currentCounter">90 Days</h2>
            </div>
            <div class="card-header px-4 pb-4 d-flex justify-content-between align-items-center flex-row flex-wrap">
                <small>
                    <b>started on :</b> 
                    <p class="start"><%=start_count%></p>   
                </small>
                <small>
                    <b>Your Best Record:</b> 
                    <p id="max_record">
                      <%=max %>
                    </p>   
                </small>
                <small>
                    <b>Attempt No:</b>    
                    <p><%= attempt_no %></p>
                </small>
            </div>
        </div>
    </nav>
    <!-- rank -->
    <nav class="container p-0">
        <div class="card">
            <div class="card-header h1">Check Your Rank:</div>
            <div class="card-body bg-light users_rank m-0 p-0">
                <table class="table table-striped table-hover">
                  <thead class="sticky-top text-center thead-dark">
                    <tr>
                      <th>No.</th>
                      <th>Username</th>
                      <th>Streak Days</th>
                    </tr>
                  </thead>
                  <tbody id="listUsers text-left">
                    <%-table %>
                  </tbody>
                </table>
            </div>
            <div class="card-footer d-flex flex-row justify-content-right">
                <form action="/logsign" method="post">
                    <input type="submit" value="Log Out" class="btn btn-danger">
                </form>
                <form action="/" method="post">
                    <input type="submit" value="Again" class="btn btn-dark">
                </form>
            </div>
        </div>
    </nav>
    <!-- scripts -->
    <%- include('./master/scripts.ejs') %>
    <script src="/javascripts/counter.js"></script>
</body>
</html>